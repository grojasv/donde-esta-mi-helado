---
export interface Props {
	containerId: string;
	containerType: 'letter' | 'plain';
	letter?: string;
	bgGradient: string;
	borderColor: string;
	hoverBorderColor: string;
	visualBgGradient: string;
	lidBgGradient: string;
	inputBorderColor: string;
	inputFocusRing: string;
}

const { 
	containerId, 
	containerType, 
	letter, 
	bgGradient,
	borderColor,
	hoverBorderColor,
	visualBgGradient,
	lidBgGradient,
	inputBorderColor,
	inputFocusRing
} = Astro.props;
---

<!-- Ice Cream Container Component -->
<div class={`group flex items-center gap-5 p-4 ${bgGradient} rounded-xl border ${borderColor} ${hoverBorderColor} hover:shadow-md transition-all duration-300 transform hover:scale-[1.02]`}>
	<div class="flex-shrink-0">
		<div class={`w-18 h-18 ${visualBgGradient} rounded-xl flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300`}>
			<div class={`w-14 h-12 ${lidBgGradient} rounded-t-xl relative ${containerType === 'letter' ? 'flex items-center justify-center' : ''} shadow-inner`}>
				{containerType === 'letter' && letter && (
					<span class="text-white font-bold text-xl drop-shadow-sm">{letter}</span>
				)}
			</div>
		</div>
	</div>
	<div class="flex-1">
		<input 
			id={`flavor-${containerId}`}
			type="text" 
			placeholder="¿Qué sabor es?"
			data-container={containerId}
			class={`w-full px-5 py-3 text-gray-800 bg-white/70 backdrop-blur-sm border ${inputBorderColor} rounded-xl focus:outline-none focus:ring-2 ${inputFocusRing} focus:border-transparent focus:bg-white text-base min-h-[48px] flavor-input transition-all duration-300 hover:bg-white/90`}
		/>
	</div>
	<div class="flex-shrink-0">
		<button 
			class="eat-btn w-12 h-12 bg-gradient-to-r from-orange-400 to-red-500 hover:from-orange-500 hover:to-red-600 text-white rounded-xl shadow-lg hover:shadow-xl transform hover:scale-110 transition-all duration-300 flex items-center justify-center text-xl opacity-0 group-hover:opacity-100 disabled:opacity-50 disabled:cursor-not-allowed"
			data-container={containerId}
			title="¡Me comí este helado! 🍦"
			disabled
		>
			😋
		</button>
	</div>
</div>
